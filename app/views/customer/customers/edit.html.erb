<div class="container mt-5">
  <div class="row mx-auto">
    <h2><span><i class="fas fa-angle-double-down"></i> 会員情報編集</span></h2>
  </div>
   
  <%=  form_with model: @customer, url: customers_path, local:true do |f| %>

  
    <div class="mb-3 row">
      <%= f.label :"氏名", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-4">
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
      </div>
      <div class="col-sm-4">
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :"フリガナ", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-4">
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, class:"form-control" %>
      </div>
      <div class="col-sm-4">
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :"郵便番号（ハイフンなし）", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-4">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :"住所", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_area :address, autofocus: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :"電話番号（ハイフンなし）", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-4">
        <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :"メールアドレス", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-4">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6">
      <%= f.submit "            編集内容を保存           ", class:"btn btn-success" %>
      </div>
      <div class="col-sm-3">
        <%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
