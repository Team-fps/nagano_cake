<div class="container mt-5">
 <div class="row">
  <div class="col">
   <h2><span>配送先登録</span></h2>
  </div>
 </div>

 <%= form_with model: @address, local:true do |f| %>
  <div class="mb-3 ml-3 row">
   <%= f.label :"郵便番号（ハイフンなし)", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-3">
    <%= f.text_field :postal_code, class:"form-control" %>
   </div>
  </div>
  <div class="mb-3 ml-3 row">
   <%= f.label :"住所", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-8">
    <%= f.text_field :address, class:"form-control" %>
   </div>
  </div>
  <div class="mb-3 ml-3 row">
   <%= f.label :"宛名", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-3">
    <%= f.text_field :name, class:"form-control" %>
   </div>
   <div class="col-sm-3">
    <%= f.submit '新規登録', class: "btn btn-success sign_up" %>
   </div>
  </div>
 <% end %>
 <div>
   <h2><span>配送先一覧</span></h2>
 </div>

 <table border="1" class="col-9 mx-5 mt-5">
  <tr class="bg-light">
   <th>郵便番号</th>
   <th>住所    </th>
   <th>宛名    </th>
   <th></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
   <td><%= address.postal_code %></td>
   <td><%= address.address %></td>
   <td><%= address.name %></td>
   <td>
     <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-success" %>
     <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-sm btn-danger" %>
   </td>
  </tr>
  <% end %>
  </div>
 </table>
</div>