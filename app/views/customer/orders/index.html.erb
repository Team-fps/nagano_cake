<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">
      <h2><span>注文履歴一覧</span></h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
           〒<%= order.postal_code %><br>
           <%= order.address %><br>
           <%= order.name %>
          </td>
          <td>
            <%# order.item.name.each do |item| %>
              <%# item.name %>
            <%# end %>
          </td>
          <td><%# (order.item.add_tax_price * order.count).to_s(:delimited) %>円</td>
          <td><%= order.payment_method %></td>
          <td><%= link_to '表示する', order_path(order.id), class: 'btn btn-primary' %></td><td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class ="row">
   <div cladd ="col-12 text-right">
   <%= paginate @orders %>
   </div>
  </div>
</div>