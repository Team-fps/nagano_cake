
<div class='row'>
  <div class='col-md-6 offset-md-3'>
    <hr>
    <div class="text-center">
    <p class='main'>注文情報入力</p>
    </div>
    <hr>
    <div class='row'>
      <div class='col-md-10 offset-md-1'>
        <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
          <div class="text-center">
            <h5 class='sub'>支払い方法</h5>
            <hr>
            <h6>
              <%= f.radio_button :payment_method, :クレジットカード %>
              <%= f.label 'クレジットカード' %>
              <%= f.radio_button :payment_method, :銀行振込 %>
              <%= f.label '銀行振込' %>
            </h6>
          </div>
          <hr>
          <div class="text-center">
            <h5 class='sub'>お届け先</h5>
          </div>
          <hr>
          <div class="text-center">
            <h6>
              <%= f.radio_button :address_option, "0" %>
              <%= f.label :address, "ご自身の住所" %>
            </h6>
            <h6>〒<%= current_customer.postal_code %>　<%= current_customer.address %></h6>
            <h6><%= current_customer.last_name %><%= current_customer.first_name %></h6>
          </div>
          <hr>
          <div class="text-center">
            <h6>
              <%= f.radio_button :address_option, "1" %>
              <%= f.label :address, "登録済住所から選択" %>
            </h6>
          </div>
          <%= f.collection_select :address_id, current_customer.addresses, :id, :view_order_address %>
          <hr>
          <div class="text-center">
            <h6>
              <%= f.radio_button :address_option, "2" %>
              <%= f.label :address, "新しいお届け先" %>
            </h6>
          </div>
          <h6>
            <%= f.label :postal_code, "郵便番号：" %>
            <%= f.text_field :postal_code, :size=>"8" %>
          </h6>
          <h6>
            <%= f.label :address, "住　　所：" %>
            <%= f.text_area :address, :size=>"55x2" %>
          </h6>
          <h6>
            <%= f.label :address, "宛　　名：" %>
            <%= f.text_field :name %>
          </h6>
          <hr>
          <div class="text-center">
            <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  <hr>
  </div>
</div>