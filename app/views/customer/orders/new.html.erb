<h2>注文情報入力</h2>
<%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
  <h2>支払い方法</h2>
  <%= f.radio_button :payment_method, :false %>
  <%= f.label 'クレジットカード' %>
  <%= f.radio_button :payment_method, :true %>
  <%= f.label '銀行振込' %>

  <h2>お届け先</h2>
  <%= f.radio_button :address_option, 0 %>
  <%= f.label :address, "ご自身の住所" %>
  <%= @customer.postal_code %>
  <%= @customer.address %>
  <br>
  <%= f.radio_button :address_option, 1 %>
  <%= f.label :address, "登録済住所から選択" %>
  <%= f.collection_select(:registered, @customer.addresses.all, :id, :address) %>
  <br>
  <%= f.radio_button :address_option, 2 %>
  <%= f.label :address, "新しいお届け先" %>
  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <br>
  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
<% end %>