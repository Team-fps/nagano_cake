<h2>カート内アイテム</h2>

  <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: "カートを空にしますか？" } %>
  <table>
    <thead>
      <th></th>
      <th>商品名</th>
      <th>価格</th>
      <th>数量</th>
      <th>小計</th>
    </thead>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, size: "100x100", fallback: "no-image.jpg" %>
          </td>
          <td><%= cart_item.item.name %></td>
          <td>¥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item do |f| %>
              <%= f.number_field :count, min: 1, max: 99 %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td>¥<%= (cart_item.item.add_tax_price * cart_item.count).to_s(:delimited)  %></td>
          <% @sum += (cart_item.item.add_tax_price * cart_item.count) %>
          <td><%= button_to "削除", cart_item_path(cart_item), method: :delete, data: { confirm: "商品を削除しますか？" } %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <table>
    <tr>
      <th>合計金額</th>
      <th>¥<%= @sum.to_s(:delimited) %></th>
    </tr>
  </table>
