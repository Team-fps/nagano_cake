<h2>カート内アイテム</h2>
<% if @cart_items.present? %>
  <h2>カート内アイテムがありません</h2>
<% else %>
  <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: "カートを空にしますか？" } %>
  <table>
    <thead>
      <th></th>
      <th>商品名</th>
      <th>価格</th>
      <th>数量</th>
      <th>小計</th>
    </thead>
    <%# sum = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag cart_item.item, :image, size: "100x100", fallback: "no-image.jpg" %>
          </td>
          <td><%= cart_item.item.name %></td>
          <td>¥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item do |f| %>
              <%= f.select :count, options_for_select((1..10).to_a), {include_blank: "個数"} %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td>¥<%= (cart_item.count * cart_item.item.price).add_tax_price.to_s(:delimited)%></td>
          <td><%= button_to "削除", cart_item_path(cart_item), method: :delete, data: { confirm: "商品を削除しますか？" } %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <table>
    <tr>
      <th>合計金額</th>
      <th><%= "¥ #{@total}" %></th>
    </tr>
  </table>
<% end %>