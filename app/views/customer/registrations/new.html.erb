<body>
  <div class="container pl-5">
    <!--<div class="row my-5">-->
    <!--  <div class="col-3 bg-light">-->
        <h2>新規会員登録</h2>
    <!--  </div>-->
    <!--</div>-->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    　<div class="row my-2">
        <div class="col-2">
          <%= f.label :"名前" %>
        </div>
        <div class="col-2 text-right">
          <%= f.label :"(姓)" %>
        </div>
        <div class="col-2">
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="col-2 text-right">
          <%= f.label :"(名)" %>
        </div>
        <div class="col text-left">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>
      <div class="row my-2">
        <div class="col-2">
          <%= f.label :"フリガナ" %>
        </div>
        <div class="col-2 text-right">
          <%= f.label :"(セイ)" %>
        </div>
        <div class="col-2">
          <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
        <div class="col-2 text-right">
          <%= f.label :"(メイ)" %>
        </div>
        <div class="col ext-left">
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="col">
          <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :"郵便番号（ハイフンなし）" %>
        </div>
        <div class="col">
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :"住所"%>
        </div>
        <div class="col">
          <%= f.text_field :address, autofocus: true, autocomplete: "postal_code", size: "75x20" %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :"電話番号（ハイフンなし）" %>
        </div>
        <div class="col">
          <%= f.text_field :phone_number, autofocus: true %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :"パスワード（6文字以上）" %>
          <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
          <% end %>
        </div>
        <div class="col">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row my-2">
        <div class="col-4">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </div>
        <div class="col">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row my-3">
        <div class="col-11 text-center">
          <%= f.submit "新規登録", class: 'btn btn-success w-25' %>
        </div>
      </div>
    <% end %>

    <div class="row mt-5 mb-2">
      <div class="col-4 bg-light">
        <h2>既に登録済みの方</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-4 text-center">
        <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
      </div>
    </div>

  </div>
</body>





































