<p id="notice"></p>
<div class='container'>
  <h1>ジャンル一覧・追加</h1>
  <div class='row'>
    <div class="col-md-6">
      <table class='table'>
        <thead>
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path( genre.id ), class:"btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '追加', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>