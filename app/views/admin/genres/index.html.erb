<h1>ジャンル一覧・追加</h1>
<p id="notice"></p>
<div class='container px-3 px-sm-0'>
  <div class='row'>
    <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
      <%= f.submit '追加', class:"btn btn-success" %>
    <% end %>
    <table class='table'>
      <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path( genre.id ), class:"btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>