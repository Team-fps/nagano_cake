<%= form_with model:@item, url:'/admin/items', local:true do |f| %>
<h1>商品新規登録</h1>
  <dl>
    <dl>
      <dt>商品画像</dt>
      <dd><%= f.attachment_field :image, placegolder:"Image" %></dd>
      <dt>商品名</dt>
      <dd><%= f.text_field :name %></dd>
      <dt>商品説明</dt>
      <dd><%= f.text_area :introduction %></dd>
      <dt>ジャンル</dt>
      <dd><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' } %></dd>
      <dt>税抜価格</dt>
      <dd><%= f.text_field :price %>円</dd>
      <dt>販売ステータス</dt>
      <dd>
        <%= f.radio_button :status,  true %>
        <%= f.label :status, '販売中', value: true %>
        <%= f.radio_button :status, false %>
        <%= f.label :status, '販売停止中', value: false %>
      </dd>
      <%= f.submit '新規登録' %>
    </dl>
  </dl>
<% end %>