<div class="offset-md-1">
  <h2 class="customers my-4 px-1 text-center">会員一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |orders| %>
      <tr>
        <td>
          <%= link_to admin_order_path(orders.id) do %>
            <%= orders.created_at %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_customer_path(orders.customer.id) do %>
            <%= orders.customer.first_name %> <%= orders.customer.last_name %>
          <% end %>
        </td>
        <td><%= orders.customer.cart_items.count %></td>
        <td>注文ステータス(order_status)</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @orders %>
