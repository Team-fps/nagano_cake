<div class="container ml-5">
    <h2 class="customers my-4 px-1 text-center">
      <%= @customer.first_name %> <%= @customer.last_name %>さんの会員編集
    </h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
    <table class="table border-0">
        <tbody>
          <tr>
            <td class="border-0 text-left">会員ID</td>
            <td class="border-0 text-left"><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="inputName">氏名</label>
            </td>
            <td class="border-0 text-left d-flex">
              <p class="mr-2"><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
              <p><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="inputNameKana">フリガナ</label>
            </td>
            <td class="border-0 text-left d-flex">
              <p class="mr-2"><%= f.text_field :first_name_kana, autofocus: true, id:"inputNameKana", placeholder:"名前"%></p>
              <p><%= f.text_field :last_name_kana, autofocus: true, id:"inputNameKana", placeholder:"名前"%></p>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="postal">郵便番号</label>
            </td>
            <td class="border-0 text-left">
              <%= f.text_field :postal_code, autofocus: true, id:"postal"%>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="address">住所</label>
            </td>
            <td class="border-0 text-left">
              <%= f.text_field :address, autofocus: true, id:"address"%>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="phone">電話番号</label>
            </td>
            <td class="border-0 text-left">
              <%= f.text_field :phone_number, autofocus: true, id:"phone"%>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="email">メールアドレス</label>
            </td>
            <td class="border-0 text-left">
              <%= f.text_field :email, autofocus: true, id:"email"%>
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left">
              <label for="">会員ステータス</label>
            </td>
            <td class="border-0 text-left">
              <%= f.radio_button :is_deleted, "有効" %>有効
              <%= f.radio_button :is_deleted, "退会" %>退会
            </td>
          </tr>
          <tr>
            <td class="border-0 text-left"></td>
            <td class="border-0 text-left d-flex">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </td>
          </tr>
       </tbody>
    </table>
  <% end %>
</div>